{
  "name": "@mmeditor/core",
  "version": "0.1.0",
  "type": "module",
  "main": "./dist/mmeditor.umd.js",
  "module": "./dist/mmeditor.es.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/mmeditor.es.js",
      "require": "./dist/mmeditor.umd.js",
      "types": "./dist/index.d.ts"
    },
    "./dist/*": "./dist/*",
    "./style.css": "./dist/style.css"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vite build && npm run build:types",
    "build:types": "tsc --project tsconfig.build.json",
    "prebuild": "rm -rf dist",
    "prepare": "npm run build",
    "prepublishOnly": "npm run lint && npm run typecheck && npm run build",
    "preview": "vite preview",
    "test": "vitest",
    "test:unit": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:security": "vitest run --grep \"Security|XSS|sanitiz\"",
    "test:performance": "vitest run --grep \"Performance|performance\"",
    "test:all": "npm run test:unit && npm run test:e2e",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "typecheck": "tsc --noEmit",
    "quality-check": "npm run lint && npm run typecheck && npm run test:coverage"
  },
  "keywords": [
    "react",
    "editor",
    "rich-text",
    "wysiwyg",
    "contenteditable"
  ],
  "author": "",
  "license": "MIT",
  "description": "A lightweight React-based rich text editor",
  "peerDependencies": {
    "react": ">=16.8.0 || ^17.0.0 || ^18.0.0 || ^19.0.0",
    "react-dom": ">=16.8.0 || ^17.0.0 || ^18.0.0 || ^19.0.0"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@mui/icons-material": "^7.3.2",
    "lucide-react": "^0.542.0"
  },
  "devDependencies": {
    "@fortawesome/fontawesome-svg-core": "^7.0.1",
    "@fortawesome/free-solid-svg-icons": "^7.0.1",
    "@fortawesome/react-fontawesome": "^3.0.2",
    "@heroicons/react": "^2.2.0",
    "@mui/joy": "^5.0.0-beta.52",
    "@playwright/test": "^1.55.0",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.3.1",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "@vitejs/plugin-react": "^5.0.2",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "jsdom": "^26.1.0",
    "prettier": "^3.6.2",
    "react-icons": "^5.5.0",
    "terser": "^5.44.0",
    "typescript": "^5.9.2",
    "vite": "^7.1.4",
    "vitest": "^3.2.4"
  }
}
